<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.user.restaurantreviewapp.customfonts.EditText_Roboto_Regular
        android:id="@+id/edit_review_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:inputType="textMultiLine" />

    <RatingBar
        android:id="@+id/edit_review_RB"
        style="@android:style/Widget.Material.RatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_review_ET"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/rating_bar_color" />
</RelativeLayout>