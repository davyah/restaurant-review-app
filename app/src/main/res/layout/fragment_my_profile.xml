<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MyProfileFragment"
    android:background="@drawable/loginbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="36dp"
            android:src="@drawable/default_avatar"
            app:civ_border_color="#90CDBF"
            app:civ_border_width="2dp" />

        <com.example.user.restaurantreviewapp.customfonts.EditText_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"

            android:id="@+id/name"
            android:layout_marginTop="54.7dp"
            android:layout_marginLeft="34.6dp"
            android:layout_marginRight="33.6dp"
            android:textColorHint="#ffffff"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textSize="14.4sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33ffffff"
            android:layout_marginLeft="34.6dp"
            android:layout_marginRight="33.6dp"
            android:layout_marginTop="6.5dp"/>


        <com.example.user.restaurantreviewapp.customfonts.EditText_Roboto_Regular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="33.6dp"
            android:background="#00000000"
            android:id="@+id/username"
            android:layout_marginStart="34.6dp"
            android:layout_marginEnd="33.6dp"
            android:hint="@string/username"
            android:textColorHint="#ffffff"
            android:inputType="text"
            android:textColor="#ffffff"
            android:textSize="14.4sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33ffffff"
            android:layout_marginStart="34.6dp"
            android:layout_marginEnd="33.6dp"
            android:layout_marginTop="6.5dp"/>

        <com.example.user.restaurantreviewapp.customfonts.MyTextView_Roboto_Regular
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34.6dp"
            android:layout_marginTop="53.8dp"
            android:layout_marginEnd="33.6dp"
            android:background="@drawable/round_corner"
            android:gravity="center_horizontal"
            android:padding="16.4dp"
            android:text="@string/save"
            android:textColor="#ffffff"
            android:textSize="13.3sp"
            android:visibility="gone"/>


    </LinearLayout>


</RelativeLayout>