<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.example.user.restaurantreviewapp.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/myReviewRestaurant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="machneyuda"
                    android:textSize="22sp" />

                <com.example.user.restaurantreviewapp.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/myReviewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="jerusalem" />

                <com.example.user.restaurantreviewapp.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/myReviewDish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textAlignment="viewStart"
                    android:text="pizza" />

                <RatingBar
                    android:id="@+id/myReviewRatingBar"
                    style="@android:style/Widget.Material.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp" />

                <com.example.user.restaurantreviewapp.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/myReviewTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textAlignment="viewStart"
                    android:text="2 hours ago" />

                <com.example.user.restaurantreviewapp.customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/myReviewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:padding="4dp"
                    android:textAlignment="viewStart"
                    android:text="khiuhdfiugiugfjbhkfhiudfhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/editButton"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_baseline_more_vert_24" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>